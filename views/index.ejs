<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Orden</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #0d0c0c;
        }

        .container {
            width: 50%;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        form {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        input[type="number"],
        input[type="text"] {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        #items {
            margin-bottom: 20px;
        }

        .item {
            border: 1px solid #ccc;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        h2 {
            margin-top: 0;
        }

        aside {
            margin-bottom: 20px;
        }

        blockquote {
            font-style: italic;
        }
        h1{
            position: relative;
            left: 20%;
        }
    </style>
</head>
<body>
    <div class="container">
        <form id="orderForm" action="/orders/new" method="post">
            <nav>
                <h1>Hacer un pedido</h1>
                <label for="tableNumber">NÃºmero de mesa:</label>
                <input type="number" id="tableNumber" name="tableNumber" required><br><br>
            </nav>
            <aside>
                <blockquote>Haga su pedido</blockquote>
                <blockquote>Si desea agregar otro producto, haga clic en "Agregar otra orden"</blockquote>
            </aside>

            <div id="items">
                <h2>Items</h2>
                <div class="item">
                    <label for="itemName">Nombre de Producto :</label>
                    <input type="text" class="itemName" name="items[0][name]" required><br><br>
                    <label for="itemPrice">Precio:</label>
                    <input type="number" class="itemPrice" name="items[0][price]" step="0.01" required><br><br>
                    <label for="itemQuantity">Cantidad:</label>
                    <input type="number" class="itemQuantity" name="items[0][quantity]" required><br><br>
                </div>
            </div>
            <br>
            <button type="button" onclick="addItem()">Agregar otra orden</button>
            <br><br>
            <button type="submit">Hacer Orden</button>
        </form>
    </div>
    <script>
        let itemCount = 1;

        function addItem() {
            const itemsDiv = document.getElementById('items');
            const newItemDiv = document.createElement('div');
            newItemDiv.classList.add('item');
            //para agregar nueva orden con los campos correspondiente
            newItemDiv.innerHTML = `
                <label for="title">Producto Agregado</label><br><br>
                <label for="itemName">Nombre de Producto:</label>
                <input type="text" class="itemName" name="items[${itemCount}][name]" required><br><br>
                <label for="itemPrice">Precio:</label>
                <input type="number" class="itemPrice" name="items[${itemCount}][price]" step="0.01" required><br><br>
                <label for="itemQuantity">Cantidad:</label>
                <input type="number" class="itemQuantity" name="items[${itemCount}][quantity]" required><br><br>
            `;
            itemsDiv.appendChild(newItemDiv);
            itemCount++;
        }
    </script>
</body>
</html>